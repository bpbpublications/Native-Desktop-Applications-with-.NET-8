<Window x:Class="WpfApp1.ButtonDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ButtonDemoWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Button Content="Click Me" Width="200" HorizontalAlignment="Left" Margin="10"/>
        <Button Name="btnAddEmployee" Width="200" Height="30" HorizontalAlignment="Left" Margin="10" Click="btnAddEmployee_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="D:\add_icon.png" Stretch="None" ></Image>
                    <TextBlock Text="Add Employee" Margin="10,0,0,0"></TextBlock>
                    <TextBlock Margin="3,0,0,0">
                        <Italic>Here</Italic>
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </StackPanel>
</Window>
