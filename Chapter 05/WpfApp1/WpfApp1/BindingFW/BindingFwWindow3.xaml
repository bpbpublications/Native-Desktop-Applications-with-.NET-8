<Window x:Class="WpfApp1.BindingFW.BindingFwWindow3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.BindingFW"
        mc:Ignorable="d"
        Title="BindingFwWindow3" Height="450" Width="800">
    <StackPanel Margin="10">
        <ListBox x:Name="lbFruits" Width="100" Height="100" SelectionChanged="lbFruits_SelectionChanged"></ListBox>
        <Button x:Name="btnDelete" Content="Delete" Width="100" Click="btnDelete_Click" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock>Update Fruit: </TextBlock>
            <TextBox x:Name="txtFruit" Width="100"/>
            <Button x:Name="btnUpdate" Click="btnUpdate_Click" Width="50" Content="Update"/>
        </StackPanel>
        
    </StackPanel>
</Window>
