<Window x:Class="WpfApp1.TextBoxMultiLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TextBoxMultiLineWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Multi-Line Line TextBox" Margin="10,10,0,0"/>
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Margin="10,0,0,0"></TextBox>
    </StackPanel>
</Window>
