<Window x:Class="WpfApp1.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:UC="clr-namespace:WpfApp1.UserControls"
        mc:Ignorable="d"
        Title="EmployeeForm" Height="450" Width="800">
    <StackPanel Margin="10">
        <UC:LabeledTextbox x:Name="txtFirstName" FieldName="First Name" Margin="5"/>
        <UC:LabeledTextbox x:Name="txtLastName" FieldName="Last Name" Margin="5"/>
        <UC:LabeledTextbox x:Name="txtEmmailAddress" FieldName="Email Address" Margin="5"/>
        <Button Name="btnSubmit" Content="Submit" Click="btnSubmit_Click" Width="200" 
                 HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
