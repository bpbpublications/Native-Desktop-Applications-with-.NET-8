<Window x:Class="WpfApp1.PasswordControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PasswordControlWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Enter New Password"/>
        <PasswordBox Width="200" HorizontalAlignment="Left" MaxLength="8"/>
        <TextBlock Text="Re-enter New Password"/>
        <PasswordBox Width="200" HorizontalAlignment="Left"  MaxLength="8" PasswordChar="$"/>
    </StackPanel>
</Window>
