<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"       
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <TextBlock>Please Subscribe Here</TextBlock>
            <Label Content="Please Subscribe Here"/>
            <Label Target="{Binding ElementName=txtEmail}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="d:\\email.png"></Image>
                    <AccessText Text="_Email Address:" Margin="5,0,0,0"></AccessText>
                    <TextBox x:Name="txtEmail" Width="200" Margin="10,0,0,0"></TextBox>
                </StackPanel>
            </Label>
        </StackPanel>
    </Grid>
</Window>
