<Window x:Class="WpfApp1.CheckboxDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CheckboxDemoWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock>Select The Fruits Needed</TextBlock>
        <CheckBox IsChecked="True">Apple</CheckBox>
        <CheckBox>Mango</CheckBox>
        <CheckBox IsThreeState="True" Name="chkGrapes" Checked="chkGrapes_Checked">Grapes</CheckBox>
    </StackPanel>
</Window>
